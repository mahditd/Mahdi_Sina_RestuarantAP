<Window x:Class="Mahdi_Sina_AP_Project.Confirming_email"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControl="clr-namespace:Mahdi_Sina_AP_Project"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mahdi_Sina_AP_Project"
        mc:Ignorable="d"
        Title="Confirming_email" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <userControl:txtBoxWithTxtBlock x:Name="txtBoxBlock" Grid.Column="1" Grid.Row="1" PlaceHolder="Verification code" HorizontalAlignment="Center"/>
        <Button x:Name="confirmBtn" Grid.Column="1" Grid.Row="2" Content="Confirm" FontSize="20" FontWeight="Bold" Margin="50, 20 , 50 ,20" Background="Blue" Click="confirmBtn_Click"/>
    </Grid>
</Window>
