<UserControl x:Class="Mahdi_Sina_AP_Project.Pages.userControls.ReplyComplaintByAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mahdi_Sina_AP_Project.Pages.userControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

        <StackPanel Background="#FF222222">
            <TextBox  Background ="Transparent" x:Name="replyText" FontSize="20" VerticalContentAlignment="Center" Foreground="YellowGreen"/>
        <Button x:Name="SubmitBtn" Content="Submit" Style="{StaticResource CustomButtonStyle}" FontFamily="{StaticResource Vintage}" FontSize="20" Foreground="DarkRed" Background="Transparent" Click="SubmitBtn_Click"/>
    </StackPanel>
    
</UserControl>
