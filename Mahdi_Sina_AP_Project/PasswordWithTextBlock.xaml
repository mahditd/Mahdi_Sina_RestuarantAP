<UserControl x:Class="Mahdi_Sina_AP_Project.PasswordWithTextBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mahdi_Sina_AP_Project"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Name="txtBlock" Text="{Binding PlaceHolder}" FontSize="20" Foreground="Gray" Panel.ZIndex="0" VerticalAlignment="Center" />
        <PasswordBox Name="password" Foreground="Red" PasswordChar="*" FontSize="20" Background="Transparent" VerticalContentAlignment="Center" PasswordChanged="password_PasswordChanged"/>
    </Grid>
</UserControl>
