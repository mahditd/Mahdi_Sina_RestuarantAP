<UserControl x:Class="Mahdi_Sina_AP_Project.txtBoxWithTxtBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mahdi_Sina_AP_Project"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <TextBlock Name="txtBlock" Text="{Binding PlaceHolder}" FontSize="20" Margin="2,0,0,0" Foreground="DarkGreen" Panel.ZIndex="0" VerticalAlignment="Center" />
        <TextBox x:Name="txtBox" Foreground="Red" Background="Transparent" VerticalContentAlignment="Center" FontSize="20" Panel.ZIndex="1" TextChanged="TextBox_TextChanged"/>

    </Grid>
</UserControl>
