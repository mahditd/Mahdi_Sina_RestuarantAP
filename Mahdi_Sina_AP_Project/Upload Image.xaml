<Window x:Class="Mahdi_Sina_AP_Project.Upload_Image"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mahdi_Sina_AP_Project"
        mc:Ignorable="d"
        Title="Upload_Image" Height="450" Width="400">
    <Grid>
        <Button Name="SelectImageButton" Content="Select Image" Width="100" Height="30" VerticalAlignment="Top" Click="SelectImageButton_Click" Margin="125,153,175,0" />
        <Image Name="PreviewImage" Width="200" Height="150" VerticalAlignment="Top" Margin="75,0,125,0" />
        <Button Name="UploadImageButton" Content="Upload Image" Width="100" Height="30" VerticalAlignment="Top" Margin="125,217,175,0" Click="UploadImageButton_Click" />
        <Button Name="SaveImageButton" Content="Save Image" Width="100" Height="30" VerticalAlignment="Top" Margin="125,285,175,0" Click="SaveImageButton_Click" />
    </Grid>
</Window>
